<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/liStatus"
        android:layout_width="10dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/liInfo">

        <TextView
            android:id="@+id/tvServiceSttColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/yellow" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/liInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/liStatus"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvServiceName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:text="@string/service_output"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvServiceOutput"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="4"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:text="@string/last_check"
                android:textStyle="italic"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvLastCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:layout_weight="4"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/liSttText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="italic"/>

    </LinearLayout>

</RelativeLayout>